<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/nanumsquare_eb"
                android:text="QNA"
                android:textColor="#FFFFFF"
                android:textSize="27dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="30dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_person_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_eb"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="        2021041078"
                    android:fontFamily="@font/nanumsquare_eb"
                    android:textSize="25dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  wda021212@gmail.com"
                    android:textSize="20dp"
                    android:fontFamily="@font/nanumsquare_b"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/registrationQ"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                android:drawableStart="@drawable/ic_baseline_content_paste_24"
                android:fontFamily="@font/nanumsquare_b"
                android:minHeight="50dp"
                android:padding="10dp"
                android:text="등록한 질문"
                android:textColor="@color/colorPrimaryDark2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/interestQ"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                android:drawableStart="@drawable/ic_baseline_star_24"
                android:fontFamily="@font/nanumsquare_b"
                android:minHeight="50dp"
                android:padding="10dp"
                android:text="관심있는 질문"
                android:textColor="@color/colorPrimaryDark2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/answerQ"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                android:drawableStart="@drawable/ic_baseline_attach_file_24"
                android:fontFamily="@font/nanumsquare_b"
                android:minHeight="50dp"
                android:padding="10dp"
                android:text="답변한 질문"
                android:textColor="@color/colorPrimaryDark2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/subjectChoice"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="#FFFFFF"
                android:drawableStart="@drawable/ic_baseline_subject_24"
                android:fontFamily="@font/nanumsquare_b"
                android:minHeight="50dp"
                android:padding="10dp"
                android:text="교과목 선택"
                android:textColor="@color/colorPrimaryDark2"
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>